{
  "name": "cds-dbm",
  "version": "0.0.8",
  "description": "Database deployment and migrations for SAP CAP",
  "main": "index.js",
  "scripts": {
    "test": "run-s test:pg:up jest test:pg:down",
    "jest": "jest --runInBand",
    "test:pg:up-nobg": "docker-compose -f test/app/docker.postgres.yml up",
    "test:pg:up": "docker-compose -f test/app/docker.postgres.yml up -d",
    "test:pg:down": "docker-compose -f test/app/docker.postgres.yml down",
    "lint": "prettier -c . && eslint '*.{js,ts,tsx}'",
    "build": "tsc -b",
    "release": "standard-version",
    "watch:ts": "tsc -w"
  },
  "bin": {
    "cds-dbm": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikezaschka/cds-dbm.git"
  },
  "keywords": [
    "sap",
    "cap",
    "cds",
    "PostgreSQL",
    "postgres"
  ],
  "author": "Mike Zaschka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikezaschka/cds-dbm/issues"
  },
  "homepage": "https://github.com/mikezaschka/cds-dbm#readme",
  "dependencies": {
    "@sap/cds": "^4.2.8",
    "@types/js-yaml": "^3.12.5",
    "@types/pg": "^7.14.5",
    "@types/sqlite3": "^3.1.6",
    "js-yaml": "^3.14.0",
    "liquibase": "^1.0.1",
    "pg": "^8.4.2",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@sap/hana-client": "^2.6.58",
    "@types/jest": "^26.0.15",
    "@types/yargs": "^15.0.9",
    "cds-pg": "0.0.20",
    "eslint": "^7.12.1",
    "eslint-plugin-jest": "^24.1.0",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.2",
    "sqlite3": "^5.0.0",
    "standard-version": "^9.0.0",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5",
    "underscore": "^1.11.0",
    "underscore.string": "^3.3.5",
    "uuidv4": "^6.2.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|json)": [
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "arrowParens": "always",
    "trailingComma": "es5",
    "singleQuote": true
  }
}
